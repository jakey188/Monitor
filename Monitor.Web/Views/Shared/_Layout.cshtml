@functions{ 
    bool LeftNemu(string a,string c) {
        var controller = Request.RequestContext.RouteData.Values["controller"].ToString().ToLower();
        var action = Request.RequestContext.RouteData.Values["action"].ToString().ToLower();
        if (controller.Equals(c,StringComparison.OrdinalIgnoreCase) && action.Equals(a,StringComparison.OrdinalIgnoreCase))
            return true;
        return false;
    }
}
